// Base
body
	color #fff
	font-weight 300

h1.title
	margin-top 20px
	margin-bottom -20px
	font-size 5em
	text-transform uppercase
h2.subtitle
	margin 0
	font-size 3em
	font-weight 300

.bg
	position absolute
	z-index -100
	.bg-solid
		position: fixed
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba(#D56D79, 0.7)
	.bg-img
		position fixed
		top -130px
		left 0
		min-height 100%
		min-width 1024px
		width 100%
	
.content 
	margin-left 30px
	z-index 1000
	@media screen and (min-width: 1200px) {
		margin-top: 70px
		margin-left 90px
	}
.iphones-img
	position absolute
	right 10%
	bottom 0
	img
		width 720px

.learn-more
	margin-top: 100px
	// position absolute
	// bottom 20px

.button 
	padding 20px 60px
	font-size 1.8em
	border 1px solid #fff
	border-radius 8px
	background transparent
	transition all 0.3s
	&:hover
		color #D56D79
		background #fff


